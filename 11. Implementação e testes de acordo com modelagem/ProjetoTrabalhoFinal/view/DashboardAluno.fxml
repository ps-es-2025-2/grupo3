<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardAlunoController">
   
   <top>
      <VBox alignment="CENTER" style="-fx-background-color: #4682B4;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Painel do Aluno" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="lblBemVindo" text="Bem-vindo, Usuário" textFill="#e1e1e1">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </VBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onResponderQuestionario" prefWidth="200.0" text="Responder Questionários" />
            <Button mnemonicParsing="false" onAction="#onMeusLaudos" prefWidth="200.0" text="Meus Laudos" />
            <Button mnemonicParsing="false" onAction="#onAgendarConsulta" prefWidth="200.0" text="Agendar Consulta" />
            <Button mnemonicParsing="false" onAction="#onSair" style="-fx-background-color: #ffcccc;" text="Sair (Logout)" textFill="#940000" />
         </children>
      </VBox>
   </center>
   
</BorderPane>