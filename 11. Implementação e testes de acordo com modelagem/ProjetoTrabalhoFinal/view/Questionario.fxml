<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QuestionarioController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="lblTitulo" text="Carregando questionÃ¡rio...">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label text="Responda com sinceridade." textFill="#6b6b6b" />

      <ScrollPane fitToWidth="true" prefHeight="300.0" prefWidth="500.0">
         <content>
            <VBox fx:id="containerPerguntas" spacing="20.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               </VBox>
         </content>
      </ScrollPane>

      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onVoltar" text="Cancelar" />
            <Button mnemonicParsing="false" onAction="#onEnviar" style="-fx-background-color: #4682B4;" text="Enviar Respostas" textFill="WHITE" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      
      <Label fx:id="lblMensagem" text="" />
   </children>
</VBox>