<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AgendamentoController">
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label text="Agendar Consulta com Psicólogo">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      
      <Label text="Selecione a Data:" />
      <DatePicker fx:id="dtData" prefWidth="300.0" promptText="Escolha o dia" />
      
      <Label text="Selecione o Horário:" />
      <ComboBox fx:id="cbHorario" prefWidth="300.0" promptText="Selecione um horário disponível" />
      
      <Label text="Observações (Opcional):" />
      <TextArea fx:id="txtObservacoes" prefHeight="100.0" prefWidth="300.0" promptText="Gostaria de falar sobre..." />
      
      <Label fx:id="lblStatus" text="" textFill="#e40000" />

      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onVoltar" style="-fx-background-color: #cccccc;" text="Voltar" />
            <Button mnemonicParsing="false" onAction="#onConfirmar" style="-fx-background-color: #4682B4;" text="Confirmar Agendamento" textFill="WHITE" />
         </children>
      </HBox>
   </children>
</VBox>