<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AvaliarQuestionarioController">
   <padding><Insets bottom="20" left="20" right="20" top="20"/></padding>
   
   <VBox spacing="10">
       <Label text="Aguardando Avaliação" style="-fx-font-weight: bold;"/>
       <ListView fx:id="listaPendentes" prefWidth="250" onMouseClicked="#onSelecionarItem"/>
       <Button text="Voltar ao Menu" onAction="#onVoltar"/>
   </VBox>
   
   <VBox spacing="10" HBox.hgrow="ALWAYS">
       <Label text="Respostas do Aluno:" style="-fx-font-weight: bold;"/>
       <TextArea fx:id="txtRespostas" prefHeight="200" editable="false" wrapText="true" style="-fx-background-color: #f4f4f4;"/>
       
       <Label text="Seu Feedback:" style="-fx-font-weight: bold;"/>
       <TextArea fx:id="txtFeedback" prefHeight="100" promptText="Digite a orientação para o aluno..."/>
       
       <Button text="Enviar Feedback" onAction="#onSalvarFeedback" style="-fx-background-color: #4682B4; -fx-text-fill: white;" maxWidth="Infinity"/>
       <Label fx:id="lblStatus"/>
   </VBox>
</HBox>